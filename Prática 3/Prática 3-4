#include <stdio.h>
#include <math.h>

int main(void) {
  char ch;
  int num;
  printf("Aperte uma tecla, se letra em minúsclo e se inteiro: de 0 a 9");
  scanf("%c",&ch);
  if(ch=='a'||ch=='b'||ch=='c'||ch=='d'||ch=='e'||ch=='f'||ch=='g'||ch=='h'||ch=='i'||ch=='j'||ch=='k'||ch=='l'||ch=='m'||ch=='n'||ch=='o'||ch=='p'||ch=='q'||ch=='r'||ch=='s'||ch=='t'||ch=='u'||ch=='v'||ch=='w'||ch=='x'||ch=='y'||ch=='z')
  printf("Isso é uma letra");
  else if(ch=='1'||ch=='2'||ch=='3'||ch=='4'||ch=='5'||ch=='6'||ch=='7'||ch=='8'||ch=='9'||ch=='0')
  printf("Isso é um inteiro");
  else if(ch=='?'||ch=='!'||ch=='%'||ch=='+'||ch=='#'||ch==';'||ch=='<'||ch=='>'||ch=='|'||ch=='='||ch=='*')
  printf("Isso é um caracter especial");
  return 0;
}